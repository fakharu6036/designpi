generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  users       User[]

  @@map("roles")
}

model User {
  id                                                         String                  @id @default(cuid())
  name                                                       String?
  email                                                      String                  @unique
  password_hash                                              String?
  company                                                    String?
  phone                                                      String?
  createdAt                                                  DateTime                @default(now())
  emailVerified                                              DateTime?
  image                                                      String?
  roleId                                                     String?
  updatedAt                                                  DateTime                @updatedAt
  accounts                                                   Account[]
  activityLogs                                               ActivityLog[]
  assistantLogs                                              AssistantLog[]
  blogComments                                               BlogComment[]
  blogPosts                                                  BlogPost[]
  uploadedFiles                                              File[]
  projects                                                   Project[]
  sessions                                                   Session[]
  support_tickets                                            support_tickets[]
  ticketMessagesStaffAuth                                    TicketMessage[]         @relation("TicketMessageAuthorStaff")
  ticketMessagesAuthored                                     TicketMessage[]         @relation("TicketMessageAuthorUser")
  newAssignedTickets                                         Ticket[]                @relation("TicketAssignedStaffNew")
  tickets                                                    Ticket[]                @relation("TicketCustomer")
  sentMessages                                               Message[]               @relation("MessageSender")
  receivedMessages                                           Message[]               @relation("MessageReceiver")
  leads                                                      Lead[]                  @relation("LeadCustomer")
  internalNotes                                              InternalNote[]          @relation("InternalNoteAuthor")
  workSessions                                               WorkSession[]           @relation("WorkSessionUser")
  fileComments                                               FileComment[]           @relation("FileCommentAuthor")
  role                                                       Role?                   @relation(fields: [roleId], references: [id])

  @@index([roleId], map: "users_roleId_fkey")
  @@map("users")
}

// Real-time chat messages model for DPI Chat system
model Message {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  message    String   @db.Text
  seen       Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  sender     User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
  @@map("messages")
}

model Project {
  id            String          @id @default(cuid())
  description   String?
  status        String          @default("planning")
  createdAt     DateTime        @default(now())
  dueDate       DateTime?
  meetingLink   String?
  name          String
  progress      Int             @default(0)
  updatedAt     DateTime        @updatedAt
  userId        String
  activityLogs  ActivityLog[]
  files         File[]
  internalNotes InternalNote[]  @relation("ProjectInternalNotes")
  workSessions  WorkSession[]   @relation("ProjectWorkSessions")
  subtasks      Subtask[]       @relation("ProjectSubtasks")
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "projects_userId_fkey")
  @@map("projects")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "accounts_userId_fkey")
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "sessions_userId_fkey")
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Lead {
  id         String     @id @default(cuid())
  name       String
  email      String
  company    String?
  message    String     @db.Text
  createdAt  DateTime   @default(now())
  phone      String?
  source     String     @default("website")
  status     LeadStatus @default(NEW)
  updatedAt  DateTime   @updatedAt
  tier       String?
  sourcePage String?
  customerId String?
  customer   User?      @relation("LeadCustomer", fields: [customerId], references: [id])

  @@index([email])
  @@index([status])
  @@index([createdAt])
  @@index([customerId])
  @@map("leads")
}

enum LeadStatus {
  NEW
  CONTACTED
  CONVERTED
  LOST
}

model BlogPost {
  id          String        @id @default(cuid())
  title       String
  content     String        @db.Text
  slug        String        @unique
  publishedAt DateTime?
  authorId    String
  status      String        @default("draft")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  author      User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments    BlogComment[]

  @@index([publishedAt])
  @@map("blog_posts")
}

model BlogComment {
  id         String   @id @default(cuid())
  content    String   @db.Text
  postId     String
  authorId   String?
  guestName  String?
  guestEmail String?
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  author     User?    @relation(fields: [authorId], references: [id])
  post       BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([authorId])
  @@index([status])
  @@index([createdAt])
  @@map("blog_comments")
}

model AssistantLog {
  id        String   @id @default(cuid())
  userId    String
  log       String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("assistant_logs")
}

model File {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  isPublic     Boolean       @default(false)
  mimeType     String
  name         String
  originalName String
  path         String
  projectId    String?
  size         Int
  storageType  String        @default("local")
  updatedAt    DateTime      @updatedAt
  url          String
  userId       String
  version      Int           @default(1)
  label        String?       // preview, source, final, etc.
  parentFileId String?       // for file revisions
  comments     FileComment[]
  project      Project?      @relation(fields: [projectId], references: [id])
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([projectId])
  @@index([createdAt])
  @@index([parentFileId])
  @@map("files")
}

// File comments for collaboration
model FileComment {
  id        String   @id @default(cuid())
  fileId    String
  authorId  String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  author    User     @relation("FileCommentAuthor", fields: [authorId], references: [id], onDelete: Cascade)

  @@index([fileId])
  @@index([authorId])
  @@index([createdAt])
  @@map("file_comments")
}

model ActivityLog {
  id          String   @id @default(cuid())
  projectId   String
  userId      String?
  eventType   String
  eventData   String?  @db.LongText
  description String
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@map("activity_logs")
}

model EmailSender {
  id             String          @id @default(cuid())
  email          String          @unique
  name           String
  smtpHost       String
  smtpPort       Int             @default(587)
  smtpUser       String
  smtpPassword   String
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  emailLogs      EmailLog[]
  emailTemplates EmailTemplate[]

  @@index([email])
  @@index([isActive])
  @@map("email_senders")
}

model EmailTemplate {
  id          String       @id @default(cuid())
  name        String       @unique
  description String?
  version     Int          @default(1)
  subject     String
  htmlContent String       @db.Text
  textContent String?      @db.Text
  senderId    String?
  isDefault   Boolean      @default(false)
  isActive    Boolean      @default(true)
  category    String?
  meta        Json?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  emailLogs   EmailLog[]
  sender      EmailSender? @relation(fields: [senderId], references: [id])

  @@index([senderId])
  @@index([category])
  @@index([isDefault])
  @@index([isActive])
  @@map("email_templates")
}

model EmailLog {
  id             String         @id @default(cuid())
  senderId       String
  templateId     String?
  recipient      String
  subject        String
  htmlContent    String         @db.Text
  textContent    String?        @db.Text
  status         String         @default("pending") // pending, sent, failed, bounced, complained, delivered
  errorMessage   String?        @db.Text
  sentAt         DateTime?
  deliveredAt    DateTime?
  bouncedAt      DateTime?
  complainedAt   DateTime?
  openedAt       DateTime?
  clickedAt      DateTime?
  bounceType     String?        // hard, soft, transient
  bounceReason   String?        @db.Text
  messageId      String?        // SMTP message ID for tracking
  scheduledFor   DateTime?      // For delayed/scheduled sends
  retryCount     Int            @default(0)
  lastRetryAt    DateTime?
  meta           Json?          // Additional metadata
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  sender         EmailSender    @relation(fields: [senderId], references: [id], onDelete: Cascade)
  template       EmailTemplate? @relation(fields: [templateId], references: [id])

  @@index([senderId])
  @@index([templateId])
  @@index([recipient])
  @@index([status])
  @@index([createdAt])
  @@index([scheduledFor])
  @@index([messageId])
  @@map("email_logs")
}

// Stores portal credentials generated for customers (admin-only)
model CustomerCredential {
  id           String   @id @default(cuid())
  userId       String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  @@map("customer_credentials")
}

// Tracks client-facing email events (credentials, project updates, invoices, etc.)
model ClientEmailEvent {
  id         String   @id @default(cuid())
  customerId String
  templateId String
  type       String   // “credentials”, “project-update”, “invoice”, “ticket-update”, etc.
  sentAt     DateTime @default(now())

  @@index([customerId])
  @@index([type])
  @@map("client_email_events")
}

model Ticket {
  id            String          @id @default(cuid())
  customerId    String?
  assignedTo    String?
  subject       String
  description   String?         @db.Text
  status        TicketStatus    @default(OPEN)
  priority      TicketPriority  @default(MEDIUM)
  source        String          @default("web")
  attachments   String?         @db.LongText
  createdAt     DateTime        @default(now()) @db.Timestamp(3)
  updatedAt     DateTime        @updatedAt @db.Timestamp(3)
  messages      TicketMessage[]
  internalNotes InternalNote[]  @relation("TicketInternalNotes")
  workSessions  WorkSession[]   @relation("TicketWorkSessions")
  assignedStaff User?           @relation("TicketAssignedStaffNew", fields: [assignedTo], references: [id])
  customer      User?           @relation("TicketCustomer", fields: [customerId], references: [id])

  @@index([customerId])
  @@index([assignedTo])
  @@index([status])
  @@index([priority])
  @@index([source])
  @@index([createdAt])
  @@map("tickets")
}

model TicketMessage {
  id            String   @id @default(cuid())
  ticketId      String
  authorUserId  String?
  authorStaffId String?
  body          String   @db.Text
  isInternal    Boolean  @default(false)
  isRead        Boolean  @default(false)
  messageType   String   @default("message")
  attachments   String?  @db.LongText
  createdAt     DateTime @default(now()) @db.Timestamp(3)
  updatedAt     DateTime @updatedAt @db.Timestamp(3)
  authorStaff   User?    @relation("TicketMessageAuthorStaff", fields: [authorStaffId], references: [id])
  authorUser    User?    @relation("TicketMessageAuthorUser", fields: [authorUserId], references: [id])
  ticket        Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([authorUserId])
  @@index([authorStaffId])
  @@index([isInternal])
  @@index([isRead])
  @@index([createdAt])
  @@map("ticket_messages")
}



model support_tickets {
  id             String                 @id
  customerId     String?
  assignedTo     String?
  subject        String
  description    String?                @db.Text
  status         support_tickets_status @default(OPEN)
  priority       String                 @default("normal")
  createdAt      DateTime               @default(now())
  updatedAt      DateTime
  users          User?                  @relation(fields: [assignedTo], references: [id])

  @@index([assignedTo])
  @@index([createdAt])
  @@index([customerId])
  @@index([priority])
  @@index([status])
}

enum TicketStatus {
  OPEN
  IN_REVIEW
  IN_PROGRESS
  RESOLVED
  CLOSED
  ARCHIVED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}


enum support_tickets_status {
  OPEN
  CLOSED
  PENDING
  RESOLVED
}

// Internal notes for tickets and projects (staff/admin only)
model InternalNote {
  id         String   @id @default(cuid())
  ticketId   String?
  projectId  String?
  authorId   String
  content    String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  author     User     @relation("InternalNoteAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  ticket     Ticket?  @relation("TicketInternalNotes", fields: [ticketId], references: [id], onDelete: Cascade)
  project    Project? @relation("ProjectInternalNotes", fields: [projectId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([projectId])
  @@index([authorId])
  @@index([createdAt])
  @@map("internal_notes")
}

// Work sessions for time tracking
model WorkSession {
  id         String    @id @default(cuid())
  userId     String
  ticketId   String?
  projectId  String?
  startTime  DateTime
  endTime    DateTime?
  duration   Int?      // in seconds, calculated when session ends
  notes      String?   @db.Text
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User      @relation("WorkSessionUser", fields: [userId], references: [id], onDelete: Cascade)
  ticket     Ticket?   @relation("TicketWorkSessions", fields: [ticketId], references: [id], onDelete: Cascade)
  project    Project?  @relation("ProjectWorkSessions", fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([ticketId])
  @@index([projectId])
  @@index([startTime])
  @@map("work_sessions")
}

// Subtasks for projects
model Subtask {
  id          String   @id @default(cuid())
  projectId   String
  title       String
  description String?  @db.Text
  status      String   @default("pending") // pending, in_progress, completed, approved
  order       Int      @default(0)
  notes       String?  @db.Text
  completedAt DateTime?
  approvedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation("ProjectSubtasks", fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
  @@index([order])
  @@map("subtasks")
}
